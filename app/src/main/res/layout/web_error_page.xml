<?xml version="1.0" encoding="utf-8"?><!--没有数据时的展示-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llEmpty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/x_window_color"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivEmptyIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/x_state_no_wifi" />

    <TextView
        android:id="@+id/tvEmptyTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="53dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="53dp"
        android:gravity="center_horizontal"
        android:text="网络不给力\n别紧张，刷新页面试试"
        android:textSize="14dp" />


    <TextView
        android:id="@+id/tvRefresh"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="15dp"
        android:background="#043"
        android:drawablePadding="15dp"
        android:gravity="center"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:text="刷新一下"
        android:textColor="@color/white" />
</LinearLayout>