<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/tabhost_iv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_25"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_4"
            tools:src="@mipmap/grid_camera" />

        <TextView
            android:id="@+id/msgCount"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_alignTop="@+id/tabhost_iv"
            android:layout_alignEnd="@+id/tabhost_iv"
            android:layout_marginEnd="-8dp"
            android:layout_marginTop="-2dp"
            android:padding="@dimen/dp_2"
            android:background="@drawable/oval_red_main"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="gone"
            tools:text="26"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tabhost_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tabhost_iv"
            android:layout_centerHorizontal="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_11"
            tools:text="消息" />
    </RelativeLayout>
</RelativeLayout>