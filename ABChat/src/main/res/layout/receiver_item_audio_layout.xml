<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/chat_time_stamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_5"
        android:background="@drawable/time_stamp_bg"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:text="00:00"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_8"
        android:gravity="center_vertical">

        <com.dale.view.CircleImageView
            android:id="@+id/chat_head"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            app:border_color="@color/white"
            app:border_width="@dimen/dp_2"
            tools:src="@mipmap/stranger" />

        <RelativeLayout
            android:id="@+id/wechat_receiver_audio"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_45"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/chat_head"
            android:background="@drawable/receive_msg_bg">

            <ImageView
                android:id="@+id/ivAudio"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/audio_animation_right_list" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/wechat_receiver_audio"
            tools:text="6''" />
    </RelativeLayout>


</LinearLayout>